<h1>Užduočių tvarkyklė</h1>
{{#if message}}
    <div class="alert alert-{{status}}" role="alert"> {{message}}</div>
{{/if}}

<table class="table table-striped-columns mt-3 align-middle">
    <thead>
        <th colspan="3">
            <form class="input-group mb-3" action="/add-task" method="POST">
                    <input type="text" class="form-control" name="task" placeholder="Įveskite užduotį">
                    <button type="submit" class="btn btn-success">Pridėti</button>
            </form>
           
        </th>
    </thead>
    <tbody>
        {{#each data}}
            <tr {{#if done}}class="completedTask"{{/if}}>
                <td><a href="/complete-task/{{@key}}">{{task}}</a></td>
                <td>{{date}}</td>
                <td class="text-end"><a href="/delete-task/{{@key}}" class="btn btn-danger">Ištrinti</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>